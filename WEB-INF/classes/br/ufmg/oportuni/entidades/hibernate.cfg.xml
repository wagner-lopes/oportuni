<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
  <property name="hibernate.c3p0.idle_test_period">300</property>
  <property name="hibernate.c3p0.max_size">5</property>
  <property name="hibernate.c3p0.max_statements">50</property>
  <property name="hibernate.c3p0.min_size">1</property>
  <property name="hibernate.c3p0.timeout">300</property>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">oportuni</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Oportuni</property>
  <property name="hibernate.connection.username">OportuniUser</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <mapping class="Tipooportunidade"/>
  <mapping class="Formacaoanterior"/>
  <mapping class="Aluno"/>
  <mapping class="Responsavel"/>
  <mapping class="Idiomasaluno"/>
  <mapping class="Oportunidadealuno"/>
  <mapping class="Experienciasprofissionais"/>
  <mapping class="Oportunidade"/>
  <mapping class="Idioma"/>
  <mapping class="Curso"/>
  <mapping class="Remuneracao"/>
  <mapping class="Formacaocomplementar"/>
 </session-factory>
</hibernate-configuration>
